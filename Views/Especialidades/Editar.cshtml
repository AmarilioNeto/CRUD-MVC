@model Academia_DKP.Models.Especialidade


@{
    ViewData["Title"] = "Edit";
}

<h1 class="alert-success">Editar Especialidade</h1>
<style>
    .myBackground {
        background-image: url(https://eguren.com.br/blog/wp-content/uploads/2018/12/3-passos-para-montar-um-consultorio-medico.jpg);
        color: black
    }
</style>

<hr />
<div class="myBackground">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div class=" col-sm-10">
                    <div class=" invisible">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="idEspecialidade" class="control-label"></label>
                            <input asp-for="idEspecialidade" class="form-control" />
                            <span asp-validation-for="idEspecialidade" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="descricaoEspecialidade" class="font-weight-bold">Descrição da Especialidade</label>
                        <input asp-for="descricaoEspecialidade" class="form-control" />
                        <span asp-validation-for="descricaoEspecialidade" class="text-danger"></span>

                    </div>

                    <div class="form-group">
                        <label asp-for="Ativa" class="font-weight-bold">Ativar</label>
                        <input asp-for="numbool" class="form-check form-switch" />
                        <span asp-validation-for="Ativa" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" name=" Salvar" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar ao Inicio</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
