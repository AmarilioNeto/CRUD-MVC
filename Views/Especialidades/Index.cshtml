@model IEnumerable<Academia_DKP.Models.Especialidade>

@{
    ViewData["Title"] = "Index";
}

<h1 class="alert-success">Especialidades</h1>

<p>
    <a asp-action="Insere" class="btn alert-success">Inserir Especialidade</a>
</p>
<table class="table table-striped table-primary">
    <thead>
        <tr>
            <th class="invisible">
                @Html.DisplayNameFor(model => model.idEspecialidade)
            </th>

            <th>
                Descrição da Especilidade
            </th>
            <th>
                Ativa
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="col-sm-10">
                <td class="invisible">
                    @Html.DisplayFor(modelItem => item.idEspecialidade)
                </td>
                <td class="col-sm-5">
                    @Html.DisplayFor(modelItem => item.descricaoEspecialidade)
                </td>
                
                <td class="col-sm-4">
                  
                    <label class="form-check-label" for="flexCheckChecked">
                        @Html.DisplayFor(modelItem => item.numString)
                    </label>
                </td>
                
                <td class=" col-sm-1">
                    <button class="btn alert-primary">
                        @Html.ActionLink("Detalhar", "Details", new { id = item.idEspecialidade })
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
